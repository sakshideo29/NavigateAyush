<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".HomePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_27"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/TryText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ministry Of Ayush"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"></TextView>

        <TextView
            android:id="@+id/Ayurvedatext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="240dp"
            android:layout_width="288dp"
            android:layout_height="98dp"
            android:text="AYURVEDA HOSPITALS"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="40dp"
            android:background="@drawable/img_6"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"></TextView>

        <TextView
            android:id="@+id/Yogatext"
            app:layout_constraintTop_toBottomOf="@+id/Ayurvedatext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_width="288dp"
            android:layout_height="98dp"
            android:text="YOGA          HOSPITALS"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="40dp"
            android:background="@drawable/img_7"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"></TextView>

        <TextView
            android:id="@+id/Unanitext"
            app:layout_constraintTop_toBottomOf="@+id/Yogatext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_width="288dp"
            android:layout_height="98dp"
            android:text="UNANI        HOSPITALS"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="40dp"
            android:background="@drawable/img_8"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"></TextView>

        <TextView
            android:id="@+id/Siddhatext"
            app:layout_constraintTop_toBottomOf="@+id/Unanitext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_width="288dp"
            android:layout_height="98dp"
            android:text="SIDDHA      HOSPITALS"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="40dp"
            android:background="@drawable/img_9"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"></TextView>

        <TextView
            android:id="@+id/Homotext"
            app:layout_constraintTop_toBottomOf="@+id/Siddhatext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:layout_width="288dp"
            android:layout_height="98dp"
            android:text="HOMEOPATHY HOSPITALS"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingLeft="40dp"
            android:background="@drawable/img_10"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>


